env.DOCKER_REGISTRY = 'heryslty'
env.DOCKER_IMAGE_NAME = 's-jenkins-lp'
node('master') {
	stage('HelloWorld') {
      echo 'Hello World'
    }
    stage('Git Pull from Github') {
      git credentialsId: 'github_login', branch: 'staging', url: 'https://github.com/mashersul/bp-jenkins-lp.git'
    }
      stage('Build Docker Image') {
        sh "docker build --build-arg APP_NAME=s-jenkins-lp -t $DOCKER_REGISTRY/$DOCKER_IMAGE_NAME:${BUILD_NUMBER} ."   
    }
      stage('Push Docker Image to Dockerhub') {
          sh "docker push $DOCKER_REGISTRY/$DOCKER_IMAGE_NAME:${BUILD_NUMBER}"
    }
      stage('DeployTo Kubernetes Cluster') {
        kubernetesDeploy(
          kubeconfigId: 'kube_login',
          configs: 's-dep-svc.yml',
          enableConfigSubstitution: true
        )
    }
      stage('Remove Docker Image') {
         sh "docker rmi $DOCKER_REGISTRY/$DOCKER_IMAGE_NAME:${BUILD_NUMBER}"   
    }
}
